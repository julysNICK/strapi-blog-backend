{
  "kind": "singleType",
  "collectionName": "settings",
  "info": {
    "name": "settings"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "blogName": {
      "type": "string",
      "required": true
    },
    "blogDescription": {
      "type": "string",
      "required": true
    },
    "logo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "menuLink": {
      "type": "component",
      "repeatable": true,
      "component": "menu.menu-link"
    },
    "text": {
      "type": "richtext",
      "required": true
    }
  }
}
